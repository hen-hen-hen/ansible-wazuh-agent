- name: Install Wazuh Agent 4.12.0-1 via dpkg
  hosts: all
  gather_facts: false
  become: yes
  tasks:
    - name: IDENTIFIER - This is Wazuh Agent Installation Playbook v2
      debug:
        msg: "Playbook loaded : Wazuh Agent Installation via dpkg"

    - name: Download Wazuh Agent .deb package
      ansible.builtin.get_url:
        url: https://packages.wazuh.com/4.x/apt/pool/main/w/wazuh-agent/wazuh-agent_4.12.0-1_amd64.deb
        dest: /tmp/wazuh-agent_4.12.0-1_amd64.deb
        mode: '0644'

    - name: Install Wazuh Agent .deb package
      ansible.builtin.shell: |
        WAZUH_MANAGER='10.80.0.20' dpkg -i /tmp/wazuh-agent_4.12.0-1_amd64.deb
      args:
        executable: /bin/bash

    - name: Run systemctl daemon-reload
      ansible.builtin.shell: systemctl daemon-reload
      args:
        executable: /bin/bash

    - name: Enable wazuh-agent service
      ansible.builtin.shell: systemctl enable wazuh-agent
      args:
        executable: /bin/bash

    - name: Start wazuh-agent service
      ansible.builtin.shell: systemctl start wazuh-agent
      args:
        executable: /bin/bash
